	android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">

	<com.BigGamev1.Horiz android:layout_width="fill_parent"
		android:id="@+id/horzView" android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/gameRoom"
			android:layout_width="wrap_content" android:layout_height="fill_parent">
			<!--RelativeLayout android:layout_width="200dip" android:id="@+id/GameList" 
				android:layout_alignParentTop="true" android:layout_height="fill_parent"> 
				<Button android:id="@+id/sudokuSend" android:layout_width="fill_parent" android:layout_alignParentTop="true" 
				android:layout_height="wrap_content" android:text="Ready To Sudoku!"> </Button> 
				<Button android:id="@+id/mazeSend" android:layout_width="fill_parent" android:layout_height="wrap_content" 
				android:text="Ready To Maze!" android:layout_below="@id/sudokuSend"> </Button> 
				<Button android:id="@+id/drawSend" android:layout_width="fill_parent" android:layout_height="wrap_content" 
				android:text="Ready To Draw!" android:layout_below="@id/mazeSend"> </Button> 
				<Button android:id="@+id/lampSend" android:layout_width="fill_parent" android:layout_height="wrap_content" 
