				</RelativeLayout -->
			<GridView android:id="@+id/GridView01" android:layout_width="300dip"
				android:layout_height="fill_parent" android:padding="10dp"
				android:verticalSpacing="10dp" android:horizontalSpacing="10dp"
				android:numColumns="auto_fit" android:columnWidth="60dp"
				android:stretchMode="columnWidth" android:gravity="center">
			</GridView>

			<RelativeLayout android:layout_width="15dip"
				android:id="@+id/Filler1" android:layout_alignRight="@id/GridView01"
				android:layout_height="fill_parent"></RelativeLayout>
			<RelativeLayout android:layout_width="510dip"
				android:id="@+id/ChattingBox" android:layout_alignRight="@id/Filler1"
				android:layout_height="fill_parent">
				<ListView android:id="@+id/chatList" android:layout_width="fill_parent"
					android:layout_height="220dip" android:layout_alignParentTop="true">
				</ListView>
				<EditText android:id="@+id/chatInput" android:layout_width="410dip"
					android:layout_height="wrap_content" android:layout_below="@id/chatList">
				</EditText>
				<Button android:id="@+id/chatSend" android:layout_width="100dip"
					android:layout_height="wrap_content" android:text="Send"
					android:layout_below="@id/chatList"
					android:layout_alignParentRight="true">
				</Button>
			</RelativeLayout>
			<RelativeLayout android:layout_width="15dip"
				android:id="@+id/Filler2" android:layout_alignRight="@id/ChattingBox"
				android:layout_height="fill_parent"></RelativeLayout>
			<ListView android:id="@+id/chatUserList"
				android:layout_width="100dip" android:layout_height="fill_parent"
				android:layout_alignRight="@id/Filler2">
			</ListView>
		</LinearLayout>
	</com.BigGamev1.Horiz>
</RelativeLayout> 
